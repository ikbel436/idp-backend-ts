{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,  
    "resolveJsonModule": true, 
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/config/*.json"]
}
